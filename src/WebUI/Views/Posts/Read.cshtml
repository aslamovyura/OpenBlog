@model WebUI.ViewModels.PostViewModel
@{
    ViewBag.Title = Localizer["Title"];
}

    <div class="post-page">

        <h1 class="left-align">@Localizer["Title"]</h1>

        <div class="post-grid">

            <div class="post-wrapper">

                <div class="article-title-container">
                    <h2 class="article-title">@Model.Title</h2>
                </div>

                <div class="article-info">
                    <div class="article-author">
                        <p class="article-info-text">@Localizer["By"] @Model.Author</p>
                    </div>

                    <div class="article-date">
                        <p class="article-info-text">@Model.Date.ToString("MMMM d, yyyy")</p>
                    </div>
                </div>
                <div class="post-content">
                    <p class="post-content-text">
                        @Model.Text
                    </p>
                </div>

                @if (Model.CurrentReaderId == Model.AuthorId)
                {
                    <div class="post-edit-container">
                        <a asp-controller="Posts" asp-action="Edit" asp-route-postId="@Model.Id" class="post-edit-text">@Localizer["Edit"]</a>
                        <a asp-controller="Posts" asp-action="Delete" asp-route-postId="@Model.Id" class="post-edit-text">@Localizer["Remove"]</a>
                    </div>
                }
            </div>


            @await Component.InvokeAsync("AddComment", new { postId = Model.Id })

            @if (Model.Comments.Count != 0)
            {
                <div class="comments-wrapper">

                    <div class="comments-count-container">
                        <div class="comments-count-text">
                            <p>@Localizer["Comments"]</p>
                        </div>
                    </div>

                    <div class="comments-list-container">

                        @foreach (var comment in Model.Comments)
                        {

                            <div class="single-comment-wrapper">
                                <div class="comment-user-logo-container">
                                    <img src="/resources/user-3.png" alt="user" class="comment-user-image">
                                </div>
                                <div class="comment-info-container">
                                    <a asp-controller="Profile" asp-action="Index" asp-route-authorId="@comment.AuthorId" class="comment-info-text">@comment.Author</a>
                                    <p class="comment-info-text">@comment.Age  @Localizer[comment.AgeUnits.ToString()] @Localizer["Ago"]</p>
                                </div>
                                <div class="comment-content-container">
                                    <p class="comment-content-text">@comment.Text</p>
                                </div>

                                @if (Model.CurrentReaderId == comment.AuthorId)
                                {
                                    <div class="comment-edit-container">
                                        <a href="#" class="comment-edit-text">@Localizer["Edit"]</a>
                                        <a asp-controller="Comments" asp-action="Delete" asp-route-commentId="@comment.Id" asp-route-returnUrl="@Url.Action("Read", "Posts", new { postId = Model.Id })" class="comment-edit-text">@Localizer["Remove"]</a>
                                    </div>
                                }
                            </div>
                        }

                    </div>
                </div>
            }
        </div>     
    </div>