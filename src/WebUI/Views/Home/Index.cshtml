@{
    ViewData["Title"] = Localizer["Title"];
}

<div class="main">
    <div class="banner">
        <div class="container">
            <h1>Open Diary</h1>
            <a class="btn-main" asp-controller="Posts" asp-action="Create"> @Localizer["GetStarted"] </a>
        </div>
    </div>
</div>

<section class="supporting">
    <div class="container">
        <div class="col">
            <h3>@Localizer["Read"]</h3>
            <p>@Localizer["CheckPosts"]</p>
            <a asp-controller="Posts" asp-action="Index"> @Localizer["LearnMore"] </a><br>
        </div>

        <div class="col">
            <h3>@Localizer["Write"]</h3>
            <p>@Localizer["WriteThoughts"]</p>
            <a asp-controller="Posts" asp-action="Create"> @Localizer["LearnMore"] </a><br>
        </div>

        <div class="col">
            <h3>@Localizer["Comment"]</h3>
            <p>@Localizer["ShareOpinion"]</p>
            <a asp-controller="Posts" asp-action="Index"> @Localizer["LearnMore"] </a><br>
        </div>
    </div>
</section>