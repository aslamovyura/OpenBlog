<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Open Diary</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway:400, 600" rel="stylesheet" type="text/css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/css/Layout.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <header>
        <div class="nav grid">
            <ul class="nav-left">
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/resources/Logo.png" class="nav-logo" asp-controller="Home" asp-action="Index">
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Index">@Localizer["About"]</a>
                </li>
                <li>
                    <a asp-controller="Authors" asp-action="Index">@Localizer["Authors"]</a>
                </li>
                <li>
                    <a asp-controller="Posts" asp-action="Index">@Localizer["Posts"]</a>
                </li>
            </ul>
            @await Component.InvokeAsync("Login")
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <div class="footer grid">
        <div class="copyright">
            <p>️&copy; OPEN DIARY 2020</p>
        </div>
        <div class="language">
            <partial name="_SelectLanguagePartial"/>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>