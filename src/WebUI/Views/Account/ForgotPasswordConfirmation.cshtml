@model WebUI.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = Localizer["Title"];
}

    <div class="sign-in-up-page">

        <h1 class="">@Localizer["PasswordReset"]</h1>

        <div class="forgot-password-confirmation">

            <div class="form-group-col">
                <div class="form-group-row">
                    <p class="confirm-message"> @Localizer["Message", Model.Email]</p>
                </div>
            </div>

        </div>
    </div>