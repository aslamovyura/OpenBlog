@model WebUI.ViewModels.Account.LoginViewModel
@{
    ViewBag.Title = Localizer["Title"];
}

    <div class="sign-in-up-page">

        <h1 class="">@Localizer["PleaseSingIn"]</h1>

            <form class="sign-in-container" method="post" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="form-group-col">
                    <div class="validation-message" asp-validation-summary="All"></div>
                    <input class="form-group-input" asp-for="Email" placeholder=@Localizer["EmailPlaceholder"]>
                    <input class="form-group-input" asp-for="Password" placeholder=@Localizer["PasswordPlaceholder"]><br />
                </div>
                <div class="form-group-row">
                    <label class="form-group-label">@Localizer["RememberMe"]</label>
                    <input class="form-group-checkbox" asp-for="RememberMe" />
                </div>
                <div>
                    <button class="btn-main" type="submit">@Localizer["SingIn"]</button>
                </div>

                <div class="form-group-row padding-bottom-none">
                    <label class="form-group-label">@Localizer["ForgotPassword"]</label>
                    <a class="form-group-link" asp-area="" asp-controller="Account" asp-action="ForgotPassword">@Localizer["ClickHere"]</a>
                </div>
                <div class="form-group-row padding-bottom-none">
                    <label class="form-group-label">@Localizer["NotAMember"]</label>
                    <a class="form-group-link" asp-area="" asp-controller="Account" asp-action="SignUp">@Localizer["SingUpNow"]</a>
                </div>
            </form>
    </div>