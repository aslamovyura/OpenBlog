@{
    ViewBag.Title = Localizer["Title"];
}

    <div class="sign-in-up-page">

        <h1 class="">@Localizer["PasswordReset"]</h1>
        <div class="sign-up-confirm-container form-inline">

            <div class="form-group-col">
                <div class="form-group-row">

                    <p class="confirm-message">
                        @Localizer["Message"]
                        <a class="confirm-message-link" asp-controller="Home" asp-action="Index">@Localizer["ClickToLogin"]</a>
                    </p>

                </div>
            </div>

        </div>
    </div>