@model WebUI.ViewModels.Account.RegisterViewModel

@{
    ViewBag.Title = Localizer["Title"];
}

<div class="sign-in-up-page">

    <h1 class="">@Localizer["UserRegistration"]</h1>

    <form class="sign-in-up-container height-625" method="post" asp-controller="Account" asp-action="SignUp">

        <div class="form-group-col">
            <div class="validation-message" asp-validation-summary="All"></div>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Localizer["FirstName"]</span>
            </div>
            <input asp-for="FirstName" type="text" aria-label="First name" class="form-control" placeholder=@Localizer["FirstNamePlaceholder"]>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Localizer["LastName"]</span>
            </div>
            <input asp-for="LastName" type="text" aria-label="Last name" class="form-control" placeholder=@Localizer["LastNamePlaceholder"]>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Localizer["Email"]</span>
            </div>
            <input asp-for="Email" type="email" aria-label="Email" class="form-control" placeholder=@Localizer["EmailPlaceholder"]>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text margin-right-negative">@Localizer["BirthDate"]</span>

                <input class="form-control" asp-for="BirthDate" placeholder=@Localizer["BirthDatePlaceholder"] type="date" aria-label="BirthDate" id="datepicker" />
                <script>$('#datepicker').datepicker({
                        uiLibrary: 'bootstrap4'
                    });</script>
            </div>
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Localizer["Password"]</span>
            </div>
            <input asp-for="Password" placeholder=@Localizer["PasswordPlaceholder"] type="password" aria-label="Password" class="form-control" />
        </div>

        <div class="input-group form-group">
            <div class="input-group-prepend">
                <span class="input-group-text">@Localizer["ConfirmPassword"]</span>
            </div>
            <input asp-for="PasswordConfirm" placeholder=@Localizer["ConfirmPasswordPlaceholder"] type="password" aria-label="PasswordConfirm" class="form-control">
        </div>

        <div class="form-group-row">
            <button class="btn-main" type="submit">@Localizer["Register"]</button>
        </div>
    </form>
</div>