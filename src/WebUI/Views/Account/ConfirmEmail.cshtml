@model WebUI.ViewModels.Account.RegisterViewModel
@{
    ViewBag.Title = Localizer["Title"];
}

<div class="sign-in-up-page">

    <h1>@Localizer["EmailConfirmation"]</h1>

    <div class="sign-in-up-container height-300">

        <div class="form-group-col">
            <div class="form-group-row">
                <p class="confirm-message-title">@Localizer["Hi"] @Model.FirstName @Model.LastName!</p>
                <p class="confirm-message">
                    @Localizer["SignUpSucceeded"]<br />
                    @Localizer["ConfirmationSent", Model.Email]
                </p>
            </div>
        </div>
    </div>
</div>